<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/card_padding_large">

    <!-- Header with icon and title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="@dimen/card_icon_size_large"
            android:layout_height="@dimen/card_icon_size_large"
            android:src="@drawable/ic_speed"
            app:tint="?attr/colorPrimary"
            android:contentDescription="@string/dashboard_cpu" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/dashboard_cpu"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface" />
    </LinearLayout>

    <!-- Usage display with progress bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvCpuUsage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="?attr/colorPrimary"
            tools:text="45%" />

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/progressCpu"
            android:layout_width="0dp"
            android:layout_height="8dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="16dp"
            app:trackThickness="8dp"
            app:trackCornerRadius="4dp"
            tools:progress="45" />

        <TextView
            android:id="@+id/tvCpuTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/on_surface_secondary"
            tools:text="42Â°C" />
    </LinearLayout>

    <!-- Core count -->
    <TextView
        android:id="@+id/tvCpuCores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textSize="12sp"
        android:textColor="@color/on_surface_secondary"
        tools:text="8 cores" />

</LinearLayout>
