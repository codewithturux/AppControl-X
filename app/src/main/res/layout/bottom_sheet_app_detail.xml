<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- App Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/ivAppIcon"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:contentDescription="@string/app_icon_desc" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvAppName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/tvVersion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/on_surface_secondary"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tvAppType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textStyle="bold" />
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLaunchApp"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            app:icon="@drawable/ic_launch"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            style="@style/Widget.Material3.Button.TonalButton"
            android:contentDescription="@string/action_launch" />
    </LinearLayout>

    <!-- Package Name -->
    <TextView
        android:id="@+id/tvPackageName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:textSize="12sp"
        android:textColor="@color/on_surface_secondary"
        android:textIsSelectable="true"
        android:fontFamily="monospace" />

    <!-- Processing Status -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvActionStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textSize="14sp"
            android:visibility="gone" />
    </LinearLayout>

    <!-- App Info Card -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardElevation="0dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/outline">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Background State Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/detail_bg_state"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:textColor="@color/primary" />

                <ImageView
                    android:id="@+id/btnExpandOps"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_expand_more"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/a11y_expand_more"
                    android:focusable="true"
                    app:tint="@color/on_surface_secondary" />
            </LinearLayout>

            <!-- RUN_IN_BACKGROUND -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="4dp"
                android:layout_marginTop="8dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="RUN_IN_BACKGROUND"
                    android:textColor="@color/on_surface_secondary"
                    android:textSize="12sp"
                    android:fontFamily="monospace" />
                <TextView
                    android:id="@+id/tvRunInBg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- RUN_ANY_IN_BACKGROUND -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="4dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="RUN_ANY_IN_BACKGROUND"
                    android:textColor="@color/on_surface_secondary"
                    android:textSize="12sp"
                    android:fontFamily="monospace" />
                <TextView
                    android:id="@+id/tvRunAnyInBg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/hint_run_any_bg"
                android:textColor="@color/on_surface_secondary"
                android:textSize="10sp"
                android:fontStyle="italic" />

            <!-- Expanded Ops Container -->
            <LinearLayout
                android:id="@+id/expandedOpsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_marginTop="8dp">

                <!-- WAKE_LOCK -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="3dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="WAKE_LOCK"
                        android:textColor="@color/on_surface_secondary"
                        android:textSize="11sp"
                        android:fontFamily="monospace" />
                    <TextView
                        android:id="@+id/tvWakeLock"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11sp" />
                </LinearLayout>

                <!-- START_FOREGROUND -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="3dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="START_FOREGROUND"
                        android:textColor="@color/on_surface_secondary"
                        android:textSize="11sp"
                        android:fontFamily="monospace" />
                    <TextView
                        android:id="@+id/tvStartForeground"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11sp" />
                </LinearLayout>

                <!-- BOOT_COMPLETED -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="3dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="BOOT_COMPLETED"
                        android:textColor="@color/on_surface_secondary"
                        android:textSize="11sp"
                        android:fontFamily="monospace" />
                    <TextView
                        android:id="@+id/tvBootCompleted"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11sp" />
                </LinearLayout>

                <!-- SYSTEM_ALERT_WINDOW -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="3dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="SYSTEM_ALERT_WINDOW"
                        android:textColor="@color/on_surface_secondary"
                        android:textSize="11sp"
                        android:fontFamily="monospace" />
                    <TextView
                        android:id="@+id/tvSystemAlertWindow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11sp" />
                </LinearLayout>

                <!-- REQUEST_INSTALL_PACKAGES -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="3dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="REQUEST_INSTALL_PACKAGES"
                        android:textColor="@color/on_surface_secondary"
                        android:textSize="11sp"
                        android:fontFamily="monospace" />
                    <TextView
                        android:id="@+id/tvRequestInstall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11sp" />
                </LinearLayout>
            </LinearLayout>

            <View android:layout_width="match_parent" android:layout_height="1dp" 
                android:background="@color/outline" android:layout_marginVertical="12dp" />

            <!-- App Size -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="6dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/detail_app_size"
                    android:textColor="@color/on_surface_secondary" />
                <TextView
                    android:id="@+id/tvAppSize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!-- Permissions -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="6dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/detail_permissions"
                    android:textColor="@color/on_surface_secondary" />
                <TextView
                    android:id="@+id/tvPermissions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!-- Target SDK -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="6dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/detail_target_sdk"
                    android:textColor="@color/on_surface_secondary" />
                <TextView
                    android:id="@+id/tvTargetSdk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!-- Min SDK -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="6dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/detail_min_sdk"
                    android:textColor="@color/on_surface_secondary" />
                <TextView
                    android:id="@+id/tvMinSdk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <View android:layout_width="match_parent" android:layout_height="1dp" 
                android:background="@color/outline" android:layout_marginVertical="8dp" />

            <!-- Install Path -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/detail_install_path"
                android:textColor="@color/on_surface_secondary"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/tvInstallPath"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:fontFamily="monospace"
                android:textIsSelectable="true" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Quick Actions -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/detail_quick_actions"
        android:textStyle="bold"
        android:textSize="14sp" />

    <!-- Actions Grid - 3 columns -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:columnCount="3"
        android:useDefaultMargins="true">

        <!-- Row 1: Force Stop, Freeze, App Info -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnForceStop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="@string/action_force_stop"
            android:textSize="10sp"
            app:icon="@drawable/ic_stop"
            app:iconSize="20dp"
            app:iconGravity="top"
            app:iconPadding="2dp"
            style="@style/Widget.Material3.Button.TonalButton" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnToggleEnable"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="@string/action_freeze"
            android:textSize="10sp"
            app:icon="@drawable/ic_freeze"
            app:iconSize="20dp"
            app:iconGravity="top"
            app:iconPadding="2dp"
            style="@style/Widget.Material3.Button.TonalButton" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnOpenSettings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="@string/btn_info"
            android:textSize="10sp"
            app:icon="@drawable/ic_info"
            app:iconSize="20dp"
            app:iconGravity="top"
            app:iconPadding="2dp"
            style="@style/Widget.Material3.Button.TonalButton" />

        <!-- Row 2: Clear Cache, Clear Data, Uninstall -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnClearCache"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="@string/action_clear_cache"
            android:textSize="10sp"
            app:icon="@drawable/ic_cleaning"
            app:iconSize="20dp"
            app:iconGravity="top"
            app:iconPadding="2dp"
            style="@style/Widget.Material3.Button.TonalButton" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnClearData"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="@string/action_clear_data"
            android:textSize="10sp"
            android:textColor="@color/warning_color"
            app:icon="@drawable/ic_delete_sweep"
            app:iconSize="20dp"
            app:iconGravity="top"
            app:iconPadding="2dp"
            app:iconTint="@color/warning_color"
            style="@style/Widget.Material3.Button.TonalButton" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnUninstall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="@string/action_uninstall"
            android:textSize="10sp"
            android:textColor="@color/status_negative"
            app:icon="@drawable/ic_delete"
            app:iconSize="20dp"
            app:iconGravity="top"
            app:iconPadding="2dp"
            app:iconTint="@color/status_negative"
            style="@style/Widget.Material3.Button.TonalButton" />

        <!-- Row 3: Restrict BG, Allow BG, AOSP Info -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRestrictBg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="@string/action_restrict_bg"
            android:textSize="10sp"
            app:icon="@drawable/ic_battery_alert"
            app:iconSize="20dp"
            app:iconGravity="top"
            app:iconPadding="2dp"
            style="@style/Widget.Material3.Button.TonalButton" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAllowBg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="@string/action_allow_bg"
            android:textSize="10sp"
            app:icon="@drawable/ic_check_circle"
            app:iconSize="20dp"
            app:iconGravity="top"
            app:iconPadding="2dp"
            style="@style/Widget.Material3.Button.TonalButton" />



    </GridLayout>
</LinearLayout>
