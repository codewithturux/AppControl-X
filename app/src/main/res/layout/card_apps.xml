<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/card_padding"
    android:foreground="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header with icon and title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="@dimen/card_icon_size"
                android:layout_height="@dimen/card_icon_size"
                android:src="@drawable/ic_apps"
                app:tint="?attr/colorPrimary"
                android:contentDescription="@string/dashboard_apps" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="@string/dashboard_apps"
                android:textSize="12sp"
                android:textColor="@color/on_surface_secondary" />
        </LinearLayout>

        <!-- Total apps count (prominent - large text) -->
        <TextView
            android:id="@+id/tvAppsTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"
            tools:text="94" />

        <!-- User | System breakdown (single line) -->
        <TextView
            android:id="@+id/tvAppsBreakdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="12sp"
            android:textColor="@color/on_surface_secondary"
            tools:text="64 User | 30 System" />

    </LinearLayout>

</FrameLayout>
