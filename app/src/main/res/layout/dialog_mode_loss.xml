<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Warning Icon -->
    <ImageView
        android:id="@+id/iconWarning"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:src="@drawable/ic_warning"
        android:contentDescription="@string/warning_icon_desc"
        app:tint="?attr/colorError" />

    <!-- Title -->
    <TextView
        android:id="@+id/textTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:textAppearance="?attr/textAppearanceHeadlineSmall"
        android:textColor="?attr/colorOnSurface" />

    <!-- Message -->
    <TextView
        android:id="@+id/textMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:textAppearance="?attr/textAppearanceBodyMedium"
        android:textColor="?attr/colorOnSurfaceVariant" />

    <!-- Retry Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnRetry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/mode_loss_btn_retry"
        style="@style/Widget.Material3.Button" />

    <!-- Switch Mode Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSwitchMode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/mode_loss_btn_switch"
        style="@style/Widget.Material3.Button.TonalButton" />

    <!-- Continue View-Only Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnViewOnly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/mode_loss_btn_view_only"
        style="@style/Widget.Material3.Button.TextButton" />

</LinearLayout>
