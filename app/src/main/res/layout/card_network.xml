<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/card_padding">

    <!-- Overflow menu icon at top-right -->
    <ImageView
        android:id="@+id/ivOverflowMenu"
        android:layout_width="@dimen/overflow_menu_size"
        android:layout_height="@dimen/overflow_menu_size"
        android:layout_gravity="top|end"
        android:src="@drawable/ic_more_vert"
        app:tint="@color/on_surface_secondary"
        android:contentDescription="@string/a11y_expand_more"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="2dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header with icon and title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/ivNetworkIcon"
                android:layout_width="@dimen/card_icon_size"
                android:layout_height="@dimen/card_icon_size"
                android:src="@drawable/ic_smartphone"
                app:tint="?attr/colorPrimary"
                android:contentDescription="@string/dashboard_network" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="@string/dashboard_network"
                android:textSize="12sp"
                android:textColor="@color/on_surface_secondary" />
        </LinearLayout>

        <!-- Network type -->
        <TextView
            android:id="@+id/tvNetworkType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"
            tools:text="WiFi" />

        <!-- Network detail (SSID or status) -->
        <TextView
            android:id="@+id/tvNetworkDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/on_surface_secondary"
            android:ellipsize="end"
            android:maxLines="1"
            tools:text="MyNetwork" />

        <!-- Signal strength percentage -->
        <TextView
            android:id="@+id/tvSignalStrength"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="12sp"
            android:textColor="@color/on_surface_secondary"
            android:visibility="gone"
            tools:visibility="visible"
            tools:text="100%" />

        <!-- Signal dBm -->
        <TextView
            android:id="@+id/tvSignalDbm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/on_surface_secondary"
            android:visibility="gone"
            tools:visibility="visible"
            tools:text="-42 dBm" />

    </LinearLayout>

</FrameLayout>
