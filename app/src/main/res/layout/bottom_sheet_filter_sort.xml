<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/filter_sort_title"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- Filter Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/filter_section_title"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/primary" />

    <RadioGroup
        android:id="@+id/rgFilter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical">

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/rbFilterAll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/filter_all"
            android:paddingVertical="8dp" />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/rbFilterRunning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/filter_running"
            android:paddingVertical="8dp" />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/rbFilterFrozen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/filter_frozen"
            android:paddingVertical="8dp" />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/rbFilterRestricted"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/filter_restricted"
            android:paddingVertical="8dp" />

    </RadioGroup>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="16dp"
        android:background="@color/outline" />

    <!-- Sort Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sort_section_title"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/primary" />

    <RadioGroup
        android:id="@+id/rgSort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical">

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/rbSortNameAsc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sort_name_asc"
            android:paddingVertical="8dp" />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/rbSortNameDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sort_name_desc"
            android:paddingVertical="8dp" />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/rbSortSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sort_size"
            android:paddingVertical="8dp" />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/rbSortUpdated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sort_updated"
            android:paddingVertical="8dp" />

    </RadioGroup>

    <!-- Apply Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnApply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/btn_apply"
        style="@style/Widget.Material3.Button" />

</LinearLayout>
