<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="?attr/colorSurface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/spacing_lg">

        <!-- Header with App Name and Mode -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="@dimen/spacing_lg">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvAppName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface" />

                <TextView
                    android:id="@+id/tvCurrentMode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textSize="14sp"
                    android:textColor="?attr/colorPrimary"
                    tools:text="Root Mode ✓" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/btnSettings"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_settings"
                android:contentDescription="@string/nav_settings"
                app:tint="?attr/colorOnSurfaceVariant" />
        </LinearLayout>

        <!-- CPU Card (Full Width) - Enhanced with Graph and Core Frequencies -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardCpu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_md"
            style="@style/Widget.AppControlX.CardView"
            app:cardCornerRadius="@dimen/card_corner_radius_large">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/card_padding_large">

                <!-- Header with icon and title -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="@dimen/card_icon_size_large"
                        android:layout_height="@dimen/card_icon_size_large"
                        android:src="@drawable/ic_speed"
                        app:tint="?attr/colorPrimary"
                        android:contentDescription="@string/a11y_cpu_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_sm"
                        android:text="@string/dashboard_cpu"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface" />
                </LinearLayout>

                <!-- Real-time CPU Graph -->
                <com.appcontrolx.ui.dashboard.cards.CpuGraphView
                    android:id="@+id/cpuGraph"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginTop="@dimen/spacing_md"
                    app:graphLineColor="?attr/colorPrimary"
                    app:graphFillColor="?attr/colorPrimary"
                    app:graphStrokeWidth="3dp" />

                <!-- Usage percentage and progress bar -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/spacing_md"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvCpuUsage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorPrimary"
                        tools:text="45%" />

                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        android:id="@+id/progressCpu"
                        android:layout_width="0dp"
                        android:layout_height="6dp"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="@dimen/spacing_md"
                        app:trackThickness="6dp"
                        app:trackCornerRadius="3dp"
                        app:indicatorColor="?attr/colorPrimary"
                        app:trackColor="?attr/colorSurfaceContainerHighest"
                        tools:progress="45" />
                </LinearLayout>

                <!-- Temperature and Core Count Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/spacing_sm"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvCpuTemp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        tools:text="48°C" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tvCpuCores"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        tools:text="8 cores" />
                </LinearLayout>

                <!-- Core Frequencies Grid (2 columns) -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvCoreFrequencies"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_md"
                    android:nestedScrollingEnabled="false"
                    tools:listitem="@layout/item_core_frequency"
                    tools:itemCount="8" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Row 1: Battery Card | Apps Card (side by side) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/spacing_md">

            <!-- Battery Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardBattery"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/card_margin"
                style="@style/Widget.AppControlX.CardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/card_padding">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/ivBatteryIcon"
                            android:layout_width="@dimen/card_icon_size"
                            android:layout_height="@dimen/card_icon_size"
                            android:src="@drawable/ic_battery_alert"
                            app:tint="@color/status_positive"
                            android:contentDescription="@string/dashboard_battery" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:text="@string/dashboard_battery"
                            android:textSize="12sp"
                            android:textColor="?attr/colorOnSurfaceVariant" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvBatteryPercent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_sm"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface"
                        tools:text="78%" />

                    <TextView
                        android:id="@+id/tvBatteryTemp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        tools:text="32°C" />

                    <TextView
                        android:id="@+id/tvBatteryStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/status_positive"
                        tools:text="Charging" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Apps Card (Clickable to navigate to Apps tab) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardApps"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/card_margin"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                style="@style/Widget.AppControlX.CardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/card_padding">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="@dimen/card_icon_size"
                            android:layout_height="@dimen/card_icon_size"
                            android:src="@drawable/ic_apps"
                            app:tint="?attr/colorPrimary"
                            android:contentDescription="@string/dashboard_apps" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:text="@string/dashboard_apps"
                            android:textSize="12sp"
                            android:textColor="?attr/colorOnSurfaceVariant" />
                    </LinearLayout>

                    <!-- Total apps count (prominent - large text) -->
                    <TextView
                        android:id="@+id/tvAppsTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_sm"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface"
                        tools:text="94" />

                    <!-- User | System breakdown -->
                    <TextView
                        android:id="@+id/tvAppsBreakdown"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textSize="12sp"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        tools:text="64 User | 30 System" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <!-- Row 2: RAM Card | Storage Card (side by side) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/spacing_md">

            <!-- RAM Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardRam"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/card_margin"
                style="@style/Widget.AppControlX.CardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/card_padding">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="@dimen/card_icon_size"
                            android:layout_height="@dimen/card_icon_size"
                            android:src="@drawable/ic_speed"
                            app:tint="?attr/colorTertiary"
                            android:contentDescription="@string/dashboard_ram" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:text="@string/dashboard_ram"
                            android:textSize="12sp"
                            android:textColor="?attr/colorOnSurfaceVariant" />
                    </LinearLayout>

                    <!-- Circular progress with percentage in center -->
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_gravity="center_horizontal">

                        <ProgressBar
                            android:id="@+id/progressRam"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="@dimen/circular_progress_size"
                            android:layout_height="@dimen/circular_progress_size"
                            android:layout_gravity="center"
                            android:indeterminate="false"
                            android:max="100"
                            android:progress="0"
                            android:progressDrawable="@drawable/circular_progress_ram"
                            android:background="@drawable/circular_progress_background"
                            android:rotation="-90" />

                        <TextView
                            android:id="@+id/tvRamPercent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="?attr/colorOnSurface"
                            tools:text="52%" />
                    </FrameLayout>

                    <TextView
                        android:id="@+id/tvRamUsed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_sm"
                        android:layout_gravity="center_horizontal"
                        android:textSize="12sp"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        tools:text="4.20 GB used" />

                    <TextView
                        android:id="@+id/tvRamDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:textSize="12sp"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        tools:text="8.00 GB total" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Storage Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardStorage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/card_margin"
                style="@style/Widget.AppControlX.CardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/card_padding">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="@dimen/card_icon_size"
                            android:layout_height="@dimen/card_icon_size"
                            android:src="@drawable/ic_smartphone"
                            app:tint="?attr/colorError"
                            android:contentDescription="@string/dashboard_storage" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:text="@string/dashboard_storage"
                            android:textSize="12sp"
                            android:textColor="?attr/colorOnSurfaceVariant" />
                    </LinearLayout>

                    <!-- Circular progress with percentage in center -->
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_gravity="center_horizontal">

                        <ProgressBar
                            android:id="@+id/progressStorage"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="@dimen/circular_progress_size"
                            android:layout_height="@dimen/circular_progress_size"
                            android:layout_gravity="center"
                            android:indeterminate="false"
                            android:max="100"
                            android:progress="0"
                            android:progressDrawable="@drawable/circular_progress_storage"
                            android:background="@drawable/circular_progress_background"
                            android:rotation="-90" />

                        <TextView
                            android:id="@+id/tvStoragePercent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="?attr/colorOnSurface"
                            tools:text="50%" />
                    </FrameLayout>

                    <TextView
                        android:id="@+id/tvStorageUsed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_sm"
                        android:layout_gravity="center_horizontal"
                        android:textSize="12sp"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        tools:text="64.00 GB used" />

                    <TextView
                        android:id="@+id/tvStorageDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:textSize="12sp"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        tools:text="128.00 GB total" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <!-- Row 3: Display Card | Device Info Card (side by side) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/spacing_md">

            <!-- Display Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardDisplay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/card_margin"
                style="@style/Widget.AppControlX.CardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/card_padding">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="@dimen/card_icon_size"
                            android:layout_height="@dimen/card_icon_size"
                            android:src="@drawable/ic_brightness"
                            app:tint="?attr/colorSecondary"
                            android:contentDescription="@string/dashboard_display" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:text="@string/dashboard_display"
                            android:textSize="12sp"
                            android:textColor="?attr/colorOnSurfaceVariant" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvDisplayResolution"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_sm"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface"
                        tools:text="1080x2400" />

                    <TextView
                        android:id="@+id/tvDisplayRefresh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        tools:text="120 Hz" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Device Info Card (Compact) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardDeviceInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/card_margin"
                style="@style/Widget.AppControlX.CardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/card_padding">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="@dimen/card_icon_size"
                            android:layout_height="@dimen/card_icon_size"
                            android:src="@drawable/ic_smartphone"
                            app:tint="?attr/colorPrimary"
                            android:contentDescription="@string/dashboard_device" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:text="@string/dashboard_device"
                            android:textSize="12sp"
                            android:textColor="?attr/colorOnSurfaceVariant" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvDeviceName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_sm"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface"
                        android:ellipsize="end"
                        android:maxLines="1"
                        tools:text="Xiaomi POCO X6" />

                    <TextView
                        android:id="@+id/tvAndroidVersion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        tools:text="Android 16" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
