<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/batch_result_title"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="?attr/colorOnSurface" />

    <!-- Summary Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <!-- Success Count -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_check_circle"
                app:tint="@color/status_positive"
                android:contentDescription="@string/a11y_action_success" />

            <TextView
                android:id="@+id/tvSuccessCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:textSize="16sp"
                android:textColor="@color/status_positive" />
        </LinearLayout>

        <!-- Failure Count -->
        <LinearLayout
            android:id="@+id/layoutFailure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_cancel"
                app:tint="@color/status_negative"
                android:contentDescription="@string/a11y_action_failed" />

            <TextView
                android:id="@+id/tvFailureCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:textSize="16sp"
                android:textColor="@color/status_negative" />
        </LinearLayout>

        <!-- Skipped Count -->
        <LinearLayout
            android:id="@+id/layoutSkipped"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_warning"
                app:tint="@color/status_warning"
                android:contentDescription="@string/batch_result_skipped" />

            <TextView
                android:id="@+id/tvSkippedCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:textSize="16sp"
                android:textColor="@color/status_warning" />
        </LinearLayout>

    </LinearLayout>

    <!-- Details Expandable Section -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:visibility="gone"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/md_theme_surfaceContainerLow"
        app:cardCornerRadius="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/tvDetailsHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/batch_result_details"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:maxHeight="200dp"
                android:nestedScrollingEnabled="true" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- View Details Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnViewDetails"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:text="@string/batch_result_view_details"
        style="@style/Widget.Material3.Button.OutlinedButton" />

    <!-- Done Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnDone"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:text="@string/batch_result_done"
        style="@style/Widget.Material3.Button" />

</LinearLayout>
