<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/card_padding">

    <!-- Overflow menu icon at top-right -->
    <ImageView
        android:id="@+id/ivOverflowMenu"
        android:layout_width="@dimen/overflow_menu_size"
        android:layout_height="@dimen/overflow_menu_size"
        android:layout_gravity="top|end"
        android:src="@drawable/ic_more_vert"
        app:tint="@color/on_surface_secondary"
        android:contentDescription="@string/a11y_expand_more"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="2dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header with icon and title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="@dimen/card_icon_size"
                android:layout_height="@dimen/card_icon_size"
                android:src="@drawable/ic_speed"
                app:tint="@color/tertiary"
                android:contentDescription="@string/dashboard_ram" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="@string/dashboard_ram"
                android:textSize="12sp"
                android:textColor="@color/on_surface_secondary" />
        </LinearLayout>

        <!-- Circular progress with percentage in center -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_gravity="center_horizontal">

            <ProgressBar
                android:id="@+id/progressRam"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="@dimen/circular_progress_size"
                android:layout_height="@dimen/circular_progress_size"
                android:layout_gravity="center"
                android:indeterminate="false"
                android:max="100"
                android:progress="0"
                android:progressDrawable="@drawable/circular_progress_ram"
                android:background="@drawable/circular_progress_background"
                android:rotation="-90" />

            <TextView
                android:id="@+id/tvRamPercent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"
                tools:text="52%" />
        </FrameLayout>

        <!-- RAM used -->
        <TextView
            android:id="@+id/tvRamUsed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_gravity="center_horizontal"
            android:textSize="12sp"
            android:textColor="@color/on_surface_secondary"
            tools:text="4.20 GB used" />

        <!-- RAM total -->
        <TextView
            android:id="@+id/tvRamTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="12sp"
            android:textColor="@color/on_surface_secondary"
            tools:text="8.00 GB total" />

    </LinearLayout>

</FrameLayout>
